<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:APPVitalPets.ViewModels"
             x:Class="APPVitalPets.Views.VeterinariosPage"
             Title="Veterinarios">

    <ContentPage.BindingContext>
        <viewModels:VeterinariosViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Button Text="+ Nuevo Veterinario"
                    Command="{Binding MostrarFormularioVetCommand}" />

            <StackLayout IsVisible="{Binding MostrarFormulario}" Padding="10">
                <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
                <Entry Placeholder="Especialidad" Text="{Binding Especialidad}" />
                <Entry Placeholder="TelÃ©fono" Text="{Binding Telefono}" />
                <Entry Placeholder="Correo" Text="{Binding Correo}" />
                <Button Text="Registrar" Command="{Binding RegistrarVeterinarioCommand}" />
            </StackLayout>

            <CollectionView ItemsSource="{Binding Veterinarios}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,*,Auto">
                            <Label Text="{Binding Nombre}" Grid.Column="0" />
                            <Label Text="{Binding Especialidad}" Grid.Column="1" />
                            <Label Text="{Binding Telefono}" Grid.Column="2" />
                            <Label Text="{Binding Correo}" Grid.Column="3" />
                            <HorizontalStackLayout Grid.Column="4" Spacing="5">
                                <Button Text="âœ"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarVeterinarioCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="ðŸ—‘"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarVeterinarioCommand}"
                                        CommandParameter="{Binding Id}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
