<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:APPVitalPets.ViewModels"
             x:Class="APPVitalPets.Views.RegistroPage"
             Title="Registro"
             BackgroundColor="#F3F4F6">

    <ContentPage.BindingContext>
        <viewModels:RegistroViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Label Text="Crear Cuenta" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#374151" />

            <Entry Placeholder="Usuario" Text="{Binding RUsuario}" />
            <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Contrasena}" />
            <Entry Placeholder="Correo" Text="{Binding Correo}" />
            <Entry Placeholder="Teléfono" Text="{Binding Telefono}" />
            <Entry Placeholder="Dirección" Text="{Binding Direccion}" />

            <Label Text="{Binding MensajeError}" IsVisible="{Binding MostrarError}"
                   TextColor="#DC2626" FontAttributes="Bold" FontSize="14"
                   HorizontalOptions="Center" />

            <Button Text="Registrar" Command="{Binding RegistrarCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
