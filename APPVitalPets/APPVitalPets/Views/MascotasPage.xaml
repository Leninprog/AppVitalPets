<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:APPVitalPets.ViewModels"
             x:Class="APPVitalPets.Views.MascotasPage"
             Title="Mascotas">

    <ContentPage.BindingContext>
        <viewModels:MascotasViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Button Text="Agregar Mascota"
                    Command="{Binding MostrarFormularioMascotaCommand}" />

            <StackLayout IsVisible="{Binding MostrarFormulario}" Padding="10">
                <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
                <Entry Placeholder="Raza" Text="{Binding Raza}" />
                <Entry Placeholder="Especie" Text="{Binding Especie}" />
                <DatePicker Date="{Binding FechaNacimiento}" />
                <Button Text="Registrar" Command="{Binding RegistrarMascotaCommand}" />
            </StackLayout>

            <CollectionView ItemsSource="{Binding Mascotas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,Auto">
                            <Label Text="{Binding Nombre}" Grid.Column="0" />
                            <Label Text="{Binding Raza}" Grid.Column="1" />
                            <Label Text="{Binding Edad}" Grid.Column="2" />
                            <HorizontalStackLayout Grid.Column="3" Spacing="5">
                                <Button Text="Editar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarMascotaCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Eliminar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarMascotaCommand}"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
