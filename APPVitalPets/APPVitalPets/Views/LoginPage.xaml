<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPVitalPets.Views.LoginPage"
             xmlns:viewModels="clr-namespace:APPVitalPets.ViewModels"
             BackgroundColor="#F3F4F6">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Label Text="¡Bienvenido a Vital Pets!" FontSize="28" FontAttributes="Bold"
                   HorizontalOptions="Center" TextColor="#374151" />

            <Frame BackgroundColor="White" CornerRadius="12" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Iniciar Sesión" FontSize="24" FontAttributes="Bold"
                           HorizontalOptions="Center" TextColor="#111827" />

                    <Entry Placeholder="Usuario"
                           Text="{Binding RUsuario}" />

                    <Entry Placeholder="Contraseña"
                           Text="{Binding Contrasena}"
                           IsPassword="True" />

                    <Label x:Name="ErrorLabel" Text="{Binding MensajeError}"
                           IsVisible="{Binding MostrarError}" TextColor="#DC2626"
                           FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" />

                    <Button Text="Iniciar Sesión" Command="{Binding LoginCommand}" />
                    <Button Text="Registrarse" Command="{Binding IrRegistroCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
