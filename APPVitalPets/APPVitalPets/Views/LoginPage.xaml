<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPVitalPets.Views.LoginPage">

    <ScrollView>
        <VerticalStackLayout Padding="30">
            <Label Text="Iniciar Sesión" FontSize="32" HorizontalOptions="Center" />

            <Entry x:Name="UserEntry" Placeholder="Usuario" />
            <Entry x:Name="PassEntry" Placeholder="Contraseña" IsPassword="True" />
            <Button Text="Iniciar Sesión" Clicked="OnLoginClicked" />
            <Button Text="Registrarse" Clicked="OnRegisterClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
