<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:APPVitalPets.ViewModels"
             x:Class="APPVitalPets.Views.CitasPage"
             Title="Citas">

    <ContentPage.BindingContext>
        <viewModels:CitasViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Button Text="+ Nueva Cita"
                    Command="{Binding MostrarFormularioCommand}" />

            <StackLayout IsVisible="{Binding MostrarFormulario}" Padding="10">
                <Entry Placeholder="Mascota" Text="{Binding NombreMascota}" />
                <Entry Placeholder="Dueño" Text="{Binding NombreDueño}" />
                <Entry Placeholder="Teléfono" Text="{Binding Telefono}" />
                <DatePicker Date="{Binding Fecha}" />
                <Entry Placeholder="Motivo" Text="{Binding Motivo}" />
                <Entry Placeholder="Veterinario" Text="{Binding Veterinario}" />
                <Button Text="Registrar" Command="{Binding RegistrarCitaCommand}" />
            </StackLayout>

            <CollectionView ItemsSource="{Binding Citas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,2*,Auto">
                            <Label Text="{Binding NombreMascota}" Grid.Column="0" />
                            <Label Text="{Binding NombreDueño}" Grid.Column="1" />
                            <Label Text="{Binding Fecha, StringFormat='dd/MM/yyyy'}" Grid.Column="2" />
                            <Label Text="{Binding Motivo}" Grid.Column="3" />
                            <HorizontalStackLayout Grid.Column="4" Spacing="5">
                                <Button Text="✏"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarCitaCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="🗑"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarCitaCommand}"
                                        CommandParameter="{Binding Id}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
