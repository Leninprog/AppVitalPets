                                    <Label Text="{Binding Motivo}" Grid.Column="3" LineBreakMode="TailTruncation" MaxLines="2" />
                                    <HorizontalStackLayout Grid.Column="4" Spacing="8">
                                        <Button Text="âœ" Clicked="OnEditarCitaClicked" CommandParameter="{Binding .}" WidthRequest="36" HeightRequest="36" />
                                        <Button Text="ðŸ—‘" Clicked="OnEliminarCitaClicked" CommandParameter="{Binding Id}" WidthRequest="36" HeightRequest="36" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
