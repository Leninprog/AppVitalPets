                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ“… Fecha de la cita" FontAttributes="Bold" />
                            <Frame CornerRadius="10" Padding="0" BorderColor="{StaticResource Primary}">
                                <DatePicker x:Name="FechaCitaPicker"
                                            MaximumDate="{x:Static sys:DateTime.Today}"
                                            HeightRequest="45" />
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ¥ Motivo" FontAttributes="Bold" />
                            <Frame CornerRadius="10" Padding="0" BorderColor="{StaticResource Primary}">
                                <Entry x:Name="MotivoEntry"
                                       Placeholder="Describe el motivo de la cita"
                                       BackgroundColor="Transparent"
                                       HeightRequest="45" />
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ‘¨â€âš• Veterinario asignado" FontAttributes="Bold" />
                            <Frame CornerRadius="10" Padding="0" BorderColor="{StaticResource Primary}">
                                <Entry x:Name="VetEntry"
                                       Placeholder="Ej: Dr. GarcÃ­a"
